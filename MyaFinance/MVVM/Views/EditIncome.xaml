<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="MyaFinance.MVVM.Views.EditIncome"
             Title="EditIncome">
    <StackLayout Padding="10">
        <Label Text="Edit Income" FontSize="Large" HorizontalOptions="Center" />

        <Label Text="Title" />
        <Entry x:Name="titleEntry" Placeholder="Title" />

        <Label Text="Description" />
        <Entry x:Name="descriptionEntry" Placeholder="Description" />

        <Label Text="Amount" />
        <Entry x:Name="amountEntry" Placeholder="Amount" Keyboard="Numeric" />

        <Label Text="Date" />
        <DatePicker x:Name="datePicker" />

        <Button Text="Save" Clicked="SaveButton_Clicked" Margin="0,10,0,0" HorizontalOptions="FillAndExpand"/>
        <Button Text="Cancel" Clicked="CancelButton_Clicked" Margin="0,10,0,0" HorizontalOptions="FillAndExpand"/>
    </StackLayout>
</ContentPage>