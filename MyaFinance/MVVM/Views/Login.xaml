<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="MyaFinance.Login"
             Title="Login">
    <StackLayout Padding="30" Spacing="10" VerticalOptions="Center">
        <Image
            Source="main.png"
            WidthRequest="100"
            HeightRequest="100"/>
        <Label Text="Giriş Yap" FontSize="Large" HorizontalOptions="Center" FontAttributes="Bold" />
        <Entry x:Name="emailEntry" Placeholder="Email" />
        <Entry x:Name="passwordEntry" Placeholder="Password" IsPassword="True" />
        <Button Text="GİRİŞ" Clicked="OnLoginButtonClicked" />
        <Label x:Name="messageLabel" TextColor="Red" IsVisible="False" />
        <Button Text="KAYIT OL" Clicked="RegisterButtonClicked" />
    </StackLayout>
</ContentPage>